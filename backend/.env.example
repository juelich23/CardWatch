# ===========================================
# CardWatch Backend Environment Configuration
# ===========================================

# Database
# Development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./auction_data.db
# Production (PostgreSQL - Supabase/Neon):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379/0

# API Keys
ANTHROPIC_API_KEY=sk-ant-your-key-here
ALT_API_KEY=your_alt_api_key_here

# CardHobby (optional - API works without auth for reading)
CARDHOBBY_AUTH_TOKEN=

# Goldin credentials (optional - for future bidding features)
GOLDIN_EMAIL=your_email@example.com
GOLDIN_PASSWORD=your_password_here

# FastAPI Security
# IMPORTANT: Generate a secure random key for production!
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# CORS - comma-separated list of allowed origins
# Development:
CORS_ORIGINS=*
# Production (set to your Vercel frontend URL):
# CORS_ORIGINS=https://your-app.vercel.app,https://www.yourdomain.com

# Scheduler
# Set to true to auto-start all scraper jobs on server startup
ENABLE_SCHEDULER=false

# Proxy settings for scrapers that need bot detection bypass (Heritage, etc.)
# Option 1: Direct proxy URL (residential proxy recommended)
# Format: http://user:pass@host:port
PROXY_URL=

# Option 2: ScraperAPI (https://www.scraperapi.com/)
SCRAPERAPI_KEY=
